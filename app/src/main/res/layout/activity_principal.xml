<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".PrincipalActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/cadsolicitar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="20dp"
                >

                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/bg_color_toolbar"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Solictar Cita"
                        android:textColor="@color/white"
                        android:textSize="19sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                <ImageView
                    android:layout_marginTop="10dp"
                    android:src="@drawable/cardone"
                    android:layout_width="230dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="100dp">
                </ImageView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/carconsulta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="20dp"
                >

                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/bg_color_toolbar"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Ir a Consulta"
                        android:textColor="@color/white"
                        android:textSize="19sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:src="@drawable/cardone"
                        android:layout_width="230dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="100dp">
                    </ImageView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="20dp"
                >

                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/bg_color_toolbar"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Valorar Psicologo"
                        android:textColor="@color/white"
                        android:textSize="19sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:src="@drawable/cardone"
                        android:layout_width="230dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="100dp">
                    </ImageView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnsalir"
                android:text="salir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Button>
        </LinearLayout>
    </ScrollView>
</LinearLayout>